<h1>Results</h1>
<div class="panel panel-default">
  <div class="panel-heading">Search Metadata</div>
  <div class="panel-body">
    <label>Query String</label>
    <p>{{queryString}}</p>
  </div>
</div>
<!-- DOWNLOAD CSV -->
<form>
  <div class="form-group">
    <a id='download' href={{href}} class="btn btn-success"> Export Results to CSV </a>
  </div>
</form>

<!-- RESULTS TABLE -->
<h2>CSV Preview</h2>
<table class="table table-bordered">
  <tr class="active">
    <th>User</th>
    <th>Handle</th>
    <th>Status</th>
    <th>Created at</th>
    <th>Retweets</th>
    <th>Favourites</th>
  </tr>
  {{#each statuses}}
    <tr>
      <td>{{user.name}}</td>
      <td> {{user.screen_name}}</td>
      <td> {{text}}</td>
      <td>{{created_at}}</td>
      <td>{{retweet_count}}</td>
      <td>{{user.favourites_count}}</td>
    </tr>
  {{/each}}
</table>

