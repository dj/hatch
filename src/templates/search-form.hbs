<form id="search-form" data-toggle="validator">
  <h3><span class="glyphicon glyphicon-search"></span> Search</h3>

  <!-- QUERY -->
  <div class="form-group">
    <label for="query">Query</label>
    <input type="text" class="form-control" id="query" placeholder="Search..." required
    data-toggle="popover" data-trigger="hover" data-placement="bottom"
    data-content="Search for Twitter key terms or hashtags">
  </div>

  <!-- LANGUAGE -->
  <!-- TODO: populate with complete list of languages -->
  <div class="form-group">
    <label for="lang">Language</label>
    <select class="form-control" id="lang" data-toggle="popover" data-trigger="hover"
    data-placement="bottom" data-content="Filter Tweets by Language">
      <option>en</option>
      <option>es</option>
      <option>jp</option>
    </select>
  </div>

  <!-- RESULT TYPE -->
  <div class="form-group">
    <label for="result-type">Result Type</label>
    <select class="form-control" id="result-type" data-toggle="popover" data-trigger="hover"
    data-placement="bottom" data-content="Choose which result type you prefer to see">
      <option>mixed</option>
      <option>recent</option>
      <option>popular</option>
    </select>
  </div>

  <!--DATEPICKER -->
  <div class="form-group">
    <div class="input-daterange">
      <label for="date-picker">Show only Tweets until</label>
      <!-- <span class="add-on">From</span> -->
      <!-- <input id="after" type="date" class="input-small" placeholder="YYYY-MM-DD" /> -->
      <input id="until" type="date" class="input-small" value="YYYY-MM-DD" 
      data-toggle="popover" data-trigger="hover"
    data-placement="bottom" data-content="Choose a date to search until"/>
    </div>
  </div>

  <!-- SUBMIT FORM -->
  <button type="submit" class="btn btn-primary">Search Twitter</button>

</form>
